<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Yandex ID Login" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">

	<description>WordPress Coding Standards for Yandex ID Login plugin</description>

	<!-- What to scan -->
	<file>.</file>

	<!-- Exclude paths -->
	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/node_modules/*</exclude-pattern>
	<exclude-pattern>/.git/*</exclude-pattern>
	<exclude-pattern>/languages/*</exclude-pattern>

	<!-- How to scan -->
	<arg value="sp"/> <!-- Show sniff and progress -->
	<arg name="basepath" value="."/> <!-- Strip the file paths down to the relevant bit -->
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/> <!-- Enables parallel processing when available for faster results -->

	<!-- Rules: WordPress Coding Standards -->
	<rule ref="WordPress">
		<!-- Allow short array syntax [] -->
		<exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
		<exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
	</rule>

	<!-- WordPress-Extra: Best practices beyond core WordPress Coding Standards -->
	<rule ref="WordPress-Extra">
		<!-- Allow short array syntax -->
		<exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
		<exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
	</rule>

	<!-- WordPress-Docs: Documentation standards -->
	<rule ref="WordPress-Docs">
		<!-- Allow file docblock after declare(strict_types=1) -->
		<exclude name="Squiz.Commenting.FileComment.Missing"/>
		<exclude name="PSR12.Files.FileHeader.IncorrectOrder"/>
	</rule>

	<!-- Check for PHP cross-version compatibility -->
	<config name="testVersion" value="7.4-"/>
	<rule ref="PHPCompatibilityWP"/>

	<!-- Enforce short array syntax [] instead of array() -->
	<rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

	<!-- Minimum WordPress version -->
	<config name="minimum_wp_version" value="6.0"/>

	<!-- Text domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="yandex-id-login"/>
			</property>
		</properties>
	</rule>

	<!-- Prefix check -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="yandex_id"/>
				<element value="Yandex_ID"/>
				<element value="YANDEX_ID"/>
			</property>
		</properties>
		<!-- Exclude errors for WordPress core hooks -->
		<exclude-pattern>*/includes/class-core.php</exclude-pattern>
	</rule>

	<!-- File naming -->
	<rule ref="WordPress.Files.FileName">
		<properties>
			<property name="strict_class_file_names" value="false"/>
		</properties>
	</rule>

</ruleset>
